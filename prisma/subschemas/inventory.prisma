import {Tags} from "./rules"
import {Inventories} from "./character"

model Weapons {
  id          String        @id @unique
  name        String
  description String?
  uses        String?
  tags        Tags[]
  bonus       Int?
  martial     Boolean
  heavy       Boolean
  Inventories Inventories[]
}

model Armor {
  id          String        @id @unique
  class       String
  description String?
  Inventories Inventories[]
}

model Items {
  id          String        @id @unique
  description String?
  Inventories Inventories[]
}
